@using Project3.ViewModels
@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<section>
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-8 col-xl-6">
                <div class="card rounded-3">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img3.webp"
                         class="w-100" style="border-top-left-radius: .3rem; border-top-right-radius: .3rem;"
                         alt="Sample photo">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Registration Info</h3>

                        <form class="px-md-2" asp-controller="Auths" asp-action="Register" method="post">

                            <div class="row">
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <input asp-for="FullName" type="text" id="form3Example1w" class="form-control" />
                                        <label asp-for ="FullName" class="form-label" for="form3Example1w">Full Name</label>
                                        <span asp-validation-for="FullName" class="text-danger"></span>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input asp-for="Email" type="text" id="form3Example1w" class="form-control" />
                                        <label asp-for="Email" class="form-label" for="form3Example1w">Email</label>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                </div>
                            </div>


                            <div class="row">
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <input asp-for="PhoneNumber" type="text" id="form3Example1w" class="form-control" />
                                        <label asp-for="PhoneNumber" class="form-label" for="form3Example1w">Phone Number</label>
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <input asp-for="Address" type="text" id="form3Example1w" class="form-control" />
                                        <label asp-for="Address" class="form-label" for="form3Example1w">Address</label>
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline datepicker">
                                        <input asp-for="DateOfBirth" type="date" class="form-control" id="exampleDatepicker1" />
                                        <label asp-for="DateOfBirth" for="exampleDatepicker1" class="form-label">Select a date</label>
                                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4">

                                    <select class="form-select" asp-items="@Html.GetEnumSelectList<Gender>()" asp-for="Gender">
                                        <option value="1" disabled>Gender</option>
                                    </select>
                                    <span asp-validation-for="Gender" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="row">
                                <div class="form-outline mb-4">
                                    <input asp-for="UserName" type="text" id="form3Example1q" class="form-control" />
                                    <label asp-for="UserName" class="form-label" for="form3Example1q">Username</label>
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <input asp-for="Password" type="password" id="form3Example1w" class="form-control" />
                                        <label asp-for="Password" class="form-label" for="form3Example1w">Password</label>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <input asp-for="ConfirmPassword" type="password" id="form3Example1w" class="form-control" />
                                        <label asp-for="ConfirmPassword" class="form-label" for="form3Example1w">Confirm Password</label>
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>

                                </div>
                            </div>
                            <button type="submit" class="btn btn-success btn-lg mb-1">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
