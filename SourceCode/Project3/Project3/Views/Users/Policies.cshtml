@model List<Policy>
@{
    ViewBag.Title = "Admin";
    Layout = "_AdminLayout";
}
<div class="content-wrapper">
    <div class="container-fluid">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"></h5>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">User Id</th>
                                    <th scope="col">Username</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Start Date</th>
                                    <th scope="col">End Date</th>
                                    <th scope="col"></th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var policy in Model)
                                {
                                    <tr>
                                        <th scope="row">@policy.Id</th>
                                        <td>@policy.User.Id</td>
                                        <td>@policy.User.Fullname</td>
                                        <td>@policy.Status</td>
                                        <td>@policy.StartDate</td>
                                        <td>@policy.EndDate</td>
                                        <td><a asp-controller="Policies" asp-action="Details" asp-route-id="@policy.Id">Details</a></td>
                                        <td><a asp-controller="Policies" asp-action="UpdateStatus" asp-route-id="@policy.Id">Accept</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div><!--End Row-->
</div>